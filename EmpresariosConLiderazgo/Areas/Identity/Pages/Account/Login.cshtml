@page
@model LoginModel

@{
    Layout = "_LayoutLogin";
}

<h1>@ViewData["Title"]</h1>
<div>
    <div>
        <section>

            <form id="account" method="post" class="user">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control form-control-user" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control form-control-user" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="btn btn-primary btn-user btn-block">Ingresar</button>
                </div>
              
            </form>
              <hr>
                                    <div class="text-center">
                                         <a id="forgot-password" asp-page="./ForgotPassword">Olvido su contraseña?</a>
                                    </div>
                                    <div class="text-center">
                                       <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrarse</a>
                                    </div>
        </section>
    </div>
   
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
