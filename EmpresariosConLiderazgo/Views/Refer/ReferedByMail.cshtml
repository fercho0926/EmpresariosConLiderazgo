@using EmpresariosConLiderazgo.Utils
@model IEnumerable<ReferedByUser>

@{
    ViewData["Title"] = "Index";
}
<style>

    .thNew {
        background-color: #326091;
        color: white;
    }

        .thmov {
        background-color: #605F5F;
        color: white;
    }

</style>
@if (@TempData["AlertMessage"] != null)
{
    <div class="alert-success jumbotron">
        <strong>Success !</strong> @TempData["AlertMessage"]
    </div>
}



<div class="card card-primary card-outline">
    <div class="card-header">
       <h1 style="color : #326091"><b>Comisión por referidos</b></h1>
    </div>
    <div class="card-body">
        <p><b>*bla bla</b> </p>
       
    </div>
</div>
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="table" class="table table-bordered table-striped">
                        <thead>
                            <tr class="thNew">
                                <th>  @Html.DisplayNameFor(model => model.Id)</th>
                                <th>  @Html.DisplayNameFor(model => model.Date)</th>
                                <th> @Html.DisplayNameFor(model => model.ReferedUserId)</th>
                                <th>@Html.DisplayNameFor(model => model.Accepted)</th>
                                <th> @Html.DisplayNameFor(model => model.InvestDone)</th>
                                <th> @Html.DisplayNameFor(model => model.ApproveByAdmin)</th>
                                <th>@Html.DisplayNameFor(model => model.AmountToRefer)</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Date)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ReferedUserId)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Accepted)</td>
                                    <td>@Html.DisplayFor(modelItem => item.InvestDone)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ApproveByAdmin)</td>
                                    <td>@Html.DisplayFor(modelItem => item.AmountToRefer)</td>
                                </tr>
                            }
                    </table>
                </div>
                <!-- /.card-body -->

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->
